<%= render 'menu' %>
<div class="container">
  <div class="row">
    <div class="title">
      <h3>공지사항</h3>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div id="acordeon">
          <div id="accordion" role="tablist" aria-multiselectable="true">
            <div class="card">
              <% @posts.each do |post| %>
                <div class="card-header card-collapse" role="tab" id="heading<%=post.id%>">
                  <h5 class="mb-0 panel-title">
                    <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=post.id%>" aria-expanded="false" aria-controls="collapse<%=post.id%>">
                      <%= post.title%>
                      <i class="nc-icon nc-minimal-down"></i>
                    </a>
                  </h5>
                </div>
                <div id="collapse<%=post.id%>" class="collapse" role="tabpanel" aria-labelledby="heading<%=post.id%>">
                  <div class="card-body">
                    <%=post.content%>
                    <p class="text-right"><%= time_ago_in_words(post.created_at)%></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- end acordeon -->
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $('.handle').on('click', function () {
    $('nav ul').toggleClass('showing');
  });
</script>
